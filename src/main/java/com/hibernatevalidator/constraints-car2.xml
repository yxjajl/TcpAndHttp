<?xml version="1.0" encoding="UTF-8"?>
<constraint-mappings xmlns="http://jboss.org/xml/ns/javax/validation/mapping" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://jboss.org/xml/ns/javax/validation/mapping validation-mapping-1.1.xsd" version="1.1">

	<bean class="com.hibernatevalidator.Car" ignore-annotations="true">
		<field name="manufacturer">
			<constraint annotation="javax.validation.constraints.NotNull" />
		</field>
		<field name="licensePlate">
			<constraint annotation="javax.validation.constraints.NotNull" />
			<constraint annotation="javax.validation.constraints.Size">
				<message>licensePlate 必须在 {min}和{max}之间 ----car1</message>
				<groups>
					<value>com.hibernatevalidator.Agroup</value>
				</groups>
				<element name="min">5</element>
				<element name="max">15</element>
			</constraint>
			<constraint annotation="javax.validation.constraints.Size">
				<message>licensePlate 必须在 {min}和{max}之间 ----car2</message>
				<element name="min">2</element>
				<element name="max">10</element>
			</constraint>
		</field>


		<field name="seatCount">
			<constraint annotation="javax.validation.constraints.Min">
				<element name="value">2</element>
			</constraint>
		</field>
		<field name="driver">
			<valid />
		</field>

	</bean>


	<bean class="com.hibernatevalidator.subcar.RentalCar" ignore-annotations="true">
		<field name="rented">
			<constraint annotation="javax.validation.constraints.NotNull" />
		</field>

		<field name="prem">
			<constraint annotation="javax.validation.constraints.NotNull">
				<message>险种保费不能为空</message>
			</constraint>

			<constraint annotation="javax.validation.constraints.Min">
				<message>险种保费不能为负数</message>
				<element name="value">0</element>
			</constraint>

			<constraint annotation="javax.validation.constraints.Digits">
				<message>险种保费数据格式错误，只能是数字，小数位小于等于2位</message>
				<element name="integer">20</element>
				<element name="fraction">2</element>
			</constraint>
		</field>

		<field name="car1">
			<valid />
			<convert-group from="javax.validation.groups.Default" to="com.hibernatevalidator.Agroup" />
		</field>

		<field name="car2">
			<valid />
		</field>
		<!-- <class ignore-annotations="true"> <group-sequence> <value>RentalCar</value> <value>CarChecks</value> </group-sequence> 
			</class> -->
	</bean>
	<!-- <constraint-definition annotation="org.mycompany.CheckCase" include-existing-validator="false"> <validated-by include-existing-validators="false"> 
		<value>org.mycompany.CheckCaseValidator</value> </validated-by> </constraint-definition> -->
</constraint-mappings>